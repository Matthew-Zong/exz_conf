
Usage:
    # 要用绝对路径
    $ ln -s /home/jaypei/exz_conf/archlinux/etc_bash.bashrc /etc/bash.bashrc
    $ ln -s /home/jaypei/exz_conf/archlinux/motd /etc/motd
    $ ln -s /home/jaypei/exz_conf/archlinux/xinitrc ~/.xinitrc
    $ ln -s /home/jaypei/exz_conf/archlinux/bashrc ~/.bashrc
    $ vim ~/.bashrc
    # delete "ls color", "PS1" etc.


